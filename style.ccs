body {
  margin: 0;
  font-family: Arial, sans-serif;
  background: #f4f4f4;
}

.container {
  max-width: 420px;
  margin: auto;
  padding: 10px;
}

#map {
  width: 100%;
  height: 300px;
  border-radius: 12px;
  margin: 10px 0;
}

.info {
  font-size: 16px;
  font-weight: bold;
}

.foto {
  width: 100%;
  border-radius: 10px;
  margin-top: 10px;
}

.logout {
  background: red;
  color: white;
  padding: 10px;
  width: 100%;
  border: none;
  border-radius: 8px;
  font-size: 16px;
}
